<div class="container">
  <div class="row mt-3">
    <div class="col-md-3"></div>
    <div class="col-md-6">

      <%= form_for(@kitten) do |f| %>
        <div class="form-group">
          <%= f.text_field :name, autofocus: true, placeholder: "Kitten name" , class: "form-control" %>
        </div><br />
        <div class="form-group">
          <%= f.text_number :age, placeholder: "Kitten age" , class: "form-control" %>
        </div><br />
        <div class="form-group">
          <%= f.text_field :cuteness, placeholder: "Cuteness" , class: "form-control" %>
        </div><br />
        <div class="form-group">
          <%= f.text_field :softness, placeholder: "Softeness" , class: "form-control" %>
        </div><br />
        <% end %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>